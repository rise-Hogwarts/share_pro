  </div>
  <div class="row">

    <!--<div class="col-9">-->
    <div class="d-flex flex-wrap col-10 border-left border-top pl-5", style="background-color: pink;">


      <% @good_recipes.each do |recipe| %>


      <div class="mb-5 ml-5 mr-4 pt-2 col-3" style="background-color: white;">
        <%= link_to recipe_path(recipe.id) do %>
         <div class="text-center">
          <%= image_tag recipe.image, size: "260x150", class:"rounded" %>
         </div>



        <!--<div class="mr-4">-->
        <div class="col">
          <table class="table table-sm table-responsive text-nowrap mt-2">
            <tbody>
              <tr><td class="overflow-x-auto font-weight-bold", style="color: crimson;"><%= "#{recipe.name}" %></td></tr>
              <tr><td class="font-weight-bold"><%= "たんぱく質量 _ #{recipe.protein}グラム" %></td></tr>
              <% end %>




            </tbody>
          </table>

         <table class="table-responsive">
           <tbody>
             <tr><td class="text-secondary text-nowrap col-2"><%= "#{recipe.created_at.strftime('%Y/%m/%d')} |" %></td><td class="text-secondary text-nowrap col-10"><i class="fas fa-user"></i>&nbsp;<%= recipe.member.name %></td></tr>
           </tbody>
         </table>
        </div>

     </div>
      <% end %>
    </div>
