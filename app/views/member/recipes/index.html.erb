<div class="container-fluid", style="background-color: cornsilk;">


  <div class="row">
  <!--<div class="col-5"></div>-->
    <h2 class="mx-auto font-weight-bold px-5 py-2 my-4 rounded border border-warning" style="background-color: white;">レ シ ピ</h2>
  </div>

  <div class="row">
  <div class="col-5"></div>
  <div class="col-5 ml-5">
  <table class="table table-bordered table-sm table-active">
    <tbody>
      <tr>
        <td style="background-color: lightcyan;"><%= link_to '新しい順', recipes_path(latest: "true"), class:"text-dark" %></td>
        <td style="background-color: lightcyan;"><%= link_to '古い順', recipes_path(old: "true"), class:"text-dark" %></td>
        <td style="background-color: lightcyan;"><%= link_to '人気順', recipes_path(star_count: "true"), class:"text-dark" %></td>
      <!--</tr>-->
      <!--<tr>-->
        <td style="background-color: lightcyan;"><%= link_to 'たんぱく質量 <多い順>', recipes_path(many_protein: "true"), class:"text-dark" %></td>
        <td style="background-color: lightcyan;"><%= link_to 'たんぱく質量 <少ない順>', recipes_path(few_protein: "true"), class:"text-dark" %></td>
      </tr>
    </tbody>
  </table>
  </div>

  </div>
  <div class="row">
    <div class="col-2 ml-2">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="text-center bg-warning">レシピ検索(ジャンル)</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to "・#{genre.name}", recipes_path(genre_id: genre.id), class: "text-primary font-weight-bold" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# @recipes.each do |recipe| %>
    <%#= recipe.name %>
    <%# end %>



    <!--<div class="col-9">-->
    <div class="d-flex flex-wrap">

      <% @recipes.each do |recipe| %>
        <!--<div>-->


      <div class="mb-4 pt-2 mx-2 border border-success" style="background-color: wheat;">
        <%= link_to recipe_path(recipe.id) do %>
         <div class="text-center">
          <%= image_tag recipe.image, size: "150x80" %>
         </div>



        <!--<div class="mr-4">-->
        <div class="col">
          <table class="table table-sm table-striped text-nowrap mt-2">
            <tbody>
              <tr><td>レシピ名</td><td class="overflow-x-auto"><u><%= recipe.name %></u></td></tr>
              <tr><td>たんぱく質量</td><td><u><%= "#{recipe.protein}グラム" %></u></td></tr>
              <tr><td>ジャンル</td><td><u><%= recipe.genre.name %></u></td></tr>
              <% end %>




            </tbody>
          </table>


        </div>

     </div>
      <% end %>
    </div>
    <!--</div>-->
  <!--</div>-->

  </div>
</div>

