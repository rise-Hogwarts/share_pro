<div class="container-fluid">
  <div class="row">
    <div class="col-3"></div>
    <h2 class="my-2 font-weight-bold text-info py-4 px-4">レ シ ピ 一 覧</h2>
  </div>
  <div class="row">
    <div class="col-2 ml-5">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="text-center bg-warning">レシピ検索(ジャンル)</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to "・#{genre.name}", recipes_path(genre_id: genre.id), class: "text-primary font-weight-bold" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# @recipes.each do |recipe| %>
    <%#= recipe.name %>
    <%# end %>



    <div class="col-9">
    <div class="d-flex flex-wrap">

      <% @recipes.each do |recipe| %>
        <!--<div>-->


      <div class="mx-4 mb-5 border border-dark">
        <%= link_to recipe_path(recipe.id) do %>
          <%= image_tag recipe.image, size: "287x160" %>

        <!--<div class="mr-4">-->
          <table class="table">
            <tbody>
              <tr><td>レシピ名</td><td class="overflow-x-auto w-50"><u><%= recipe.name %></u></td></tr>
              <tr><td>たんぱく質量</td><td><u><%= "#{recipe.protein}グラム" %></u></td></tr>
              <tr><td class="align-middle">ジャンル</td><td><u><%= recipe.genre.name %></u></td></tr>
            </tbody>
          </table>
        <% end %>
     </div>
      <% end %>
    </div>
    </div>
  <!--</div>-->

  </div>
</div>

