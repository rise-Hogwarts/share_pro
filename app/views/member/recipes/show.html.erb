<div class="container-fluid">


  <div class="row mt-3 ml-5">
    <div class="col-5 mr-4">      <!--左上 レシピ情報-->
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="col-4 table-active"><h4 class="font-weight-bold">レシピ名</h4></td><td class="col-8"><%= @recipe.name %></td>
          </tr>
          <tr>
            <td class="col-4 table-active"><h4 class="font-weight-bold">ジャンル</h4></td><td class="col-8"><%= @recipe.genre.name %></td>
          </tr>
          <tr>
            <td class="col-4 table-active"><h4 class="font-weight-bold">たんぱく質量</h4></td><td class="col-8"><%= "#{@recipe.protein}グラム" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-6 border border-dark mb-3 pt-2">    <!--右上 材料-->
      <u><h3>材料</h3></u>
      <h5><%= safe_join(@recipe.ingredients.split("\n"),tag(:br)) %></h5></div>
  </div>


  <div class="row ml-5">
    <div class="col-5 mr-4">    <!--左下 レシピ画像-->
      <%= image_tag @recipe.image, size: "557x490", class:'border border-warning' %>
    </div>
    <div class="col-6 border border-warning pt-2">    <!--右下 作り方-->
      <h3><u>作り方</u></h3>
      <%= safe_join(@recipe.explanation.split("\n"),tag(:br)) %>
    </div>
  </div>


</div>