<div class="container py-5">

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

<div class="row">
  <div class="col-3"></div>
  <div class="my-5">
    <%= f.text_field :name, placeholder: "ジャンル名を入力", class:"pr-5 h-100" %>
    <%= f.submit '追加', class:'btn btn-primary mb-1 px-4' %>
  </div>
</div>

<% end %>
  <div class="row">
    <div class="col-3"></div>
  <table class="table table-bordered col-6 mb-5 font-weight-bold">
    <thead class="table-active">
      <tr>
        <th class="col-8">ジャンル一覧</th>
        <th class="col-4"></th>
      </tr>
    </thead>
    <% @genres.each do |genre| %>
    <tbody style="background-color: lightyellow;">
      <tr>
        <td class="align-middle"><%= genre.name %></td>
        <td class="text-center"><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class:'btn btn-danger' %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>

</div>