<div class="container-fluid pt-5", style="background-color: lightgoldenrodyellow;">

  <div class="row">
    <h3 class="font-weight-bold mx-auto rounded-pill px-5 py-4 mb-5", style="background-color: #fcd575;">
      <%= "〜 #{@recipe.name}" %>
      のレシピ 〜
    </h3>
  </div>


  <div class="row ml-5">

    <div class="col-5 ml-3">    <!--左下 レシピ画像-->
      <%= image_tag @recipe.image, size: "550x400", class:'border border-dark mb-4' %>

      <table class="table table-lg mb-3", style="background-color: white;">
        <tbody>
          <tr>
            <td class="col-4"><h6 class="font-weight-bold mt-2 border-right border-secondary">　レシピ名</h6></td><td class="col-8 align-middle"><%= @recipe.name %></td>
          </tr>
          <tr>
            <td class="col-4"><h6 class="font-weight-bold mt-2 border-right border-secondary">　ジャンル</h6></td><td class="col-8 align-middle"><%= @recipe.genre.name %></td>
          </tr>
          <tr>
            <td class="col-4"><h6 class="font-weight-bold mt-2 border-right border-secondary">　たんぱく質量</h6></td><td class="col-8 align-middle"><%= "#{@recipe.protein}グラム" %></td>
          </tr>
        </tbody>
      </table>
      <table class="table table-sm table-bordered", style="background-color: white;">
        <tbody>
          <tr>
            <td class="col-4 pl-4"><i class="fas fa-user"></i>&nbsp;ユーザ名</td><td class="col-8 align-middle"><%= @recipe.member.name %></td>
          </tr>
          <tr>
            <td class="col-4 pl-4"><i class="far fa-calendar-alt"></i>&nbsp;投稿日</td><td class="col-8 align-middle"><%= @recipe.created_at.strftime('%Y / %m / %d') %></td>
          </tr>
        </tbody>
      </table>



           <h4 class="mb-4 px-3 bg-light border border-dark w-25 btn-sm">
             <i class="fas fa-thumbs-up"></i> <%= @recipe.goods.count %> いいね
           </h4>



      <%= "#{@recipe.post_comments.count}件のコメント" %><br>
      <div class="bg-light mb-5 pl-2 py-2">
      <% @recipe.post_comments.each do |post_comment| %>
      <div class="mb-3 border-bottom border-secondary">
      <i class="fas fa-user"></i>
      <% if post_comment.member_id == @recipe.member_id %>
        <%= "#{post_comment.member.name}[投稿主]" %>
      <% else %>
        <%= post_comment.member.name %>
      <% end %>
        &nbsp;&nbsp;&nbsp;
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
        &nbsp;&nbsp;&nbsp;
        <div class="btn border border-primary btn-sm font-weight-bold">
          <%= link_to "削除", recipe_post_comment_path(post_comment.recipe, post_comment), method: :delete, data: { confirm: 'コメントを削除しますか？'} %>
        </div><br>
        &nbsp;&nbsp;&nbsp;
        <%= post_comment.comment %><br>
      </div>
      <% end %>
      </div>

    </div>


    <div class="col-6 mr-4">    <!--右上 材料-->
      <div class="border border-dark py-3 pl-3 mb-5", style="background-color: #aacf53;"><u><h3>材料</h3></u>
        <h5><%= safe_join(@recipe.ingredients.split("\n"),tag(:br)) %></h5>
      </div>
      <div class="border border-dark py-3 pl-3", style="background-color: #c7dc68;"><u><h3>作り方</h3></u>
      <%= safe_join(@recipe.explanation.split("\n"),tag(:br)) %>
      </div>
    </div>
  </div>


</div>