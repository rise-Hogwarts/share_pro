<div class="container-fluid">
  <div class="row">
    <div class="col-3"></div>
    <h2 class="my-2 font-weight-bold text-info py-4 px-4">レ シ ピ 一 覧</h2>
  </div>
  <div class="row">
    <div class="col-2 ml-5">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="text-center bg-warning">レシピ検索(ジャンル)</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to "・#{genre.name}", admin_recipes_path(genre_id: genre.id), class: "text-primary font-weight-bold" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# @recipes.each do |recipe| %>
    <%#= recipe.name %>
    <%# end %>



    <div class="col-9">
    <div class="d-flex flex-wrap">

      <% @recipes.each do |recipe| %>
        <!--<div>-->


      <div class="mb-4 pt-2 w-25 border border-success" style="background-color: wheat;">
        <%= link_to admin_recipe_path(recipe.id) do %>
         <div class="px-5 ml-2">
          <%= image_tag recipe.image, size: "150x80" %>
         </div>



        <!--<div class="mr-4">-->
        <div class="col">
          <table class="table table-sm table-striped text-nowrap mt-2">
            <tbody>
              <tr><td>レシピ名</td><td class="overflow-x-auto"><u><%= recipe.name %></u></td></tr>
             <% end %>
              <tr><td>たんぱく質量</td><td><u><%= "#{recipe.protein}グラム" %></u></td></tr>
              <!--<tr><td>ジャンル</td><td><u><%#= recipe.genre.name %></u></td></tr>-->




            </tbody>
          </table>

          <%= link_to admin_member_path(recipe.member.id) do %><p class="text-dark font-weight-bold btn btn-outline-success btn-sm w-100"><%= recipe.member.name %></p><% end %>
        </div>

     </div>
      <% end %>
    </div>
    </div>
  <!--</div>-->

  </div>
</div>

