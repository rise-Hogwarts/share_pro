<div class="container-fluid" style="background-color: lightyellow;">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="ml-3 font-weight-bold px-4 py-2 my-4 rounded-pill border border-secondary" style="background-color: wheat;">会 員 一 覧</h4>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table text-center mb-5" style="background-color: blanchedalmond;">
        <thead class="table-active">
          <tr>
            <th class="col-1">ID</th>
            <th class="col-3">ユーザ名</th>
            <th class="col-4">メールアドレス</th>
            <th class="col-2">ステータス</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
        <tbody>
          <tr>
            <td><u><%= member.id %></u></td>
          <td><u><%= link_to admin_member_path(member.id) do %>
            <%= member.name %>
          <% end %>
          </u></td>
            <td><u><%= member.email %></u></td>
          <% if member.is_deleted == true %>
            <td><u>退会済み</u></td>
          <% elsif member.is_deleted == false %>
            <td><u>有効</u></td>
          <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row my-5 py-5"></div>
  <div class="row my-5 py-5"></div>
</div>